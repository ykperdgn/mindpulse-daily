---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const posts = await getCollection('posts');
const englishPosts = posts.filter(p => p.data.language === 'en').slice(0, 5);
---

<Layout title="MindPulse Daily - Daily Knowledge Drops">
  <main class="container mx-auto px-4 py-8">    <!-- Hero Section -->
    <div class="text-center mb-16">
      <div class="relative">
        <h1 class="text-6xl md:text-7xl font-black text-gray-900 mb-6 leading-tight">
          ðŸ§  <span class="bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent">MindPulse</span>
        </h1>
        <div class="absolute -top-4 -right-4 w-8 h-8 bg-yellow-400 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-2 -left-6 w-6 h-6 bg-purple-400 rounded-full animate-bounce"></div>
      </div>
      <p class="text-2xl md:text-3xl text-gray-700 mb-6 font-light">
        <span class="font-bold text-purple-600">Mind-Blowing</span> Knowledge Drops
      </p>
      <p class="text-lg text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
        Discover shocking truths about <span class="font-semibold text-purple-600">human psychology</span>,
        <span class="font-semibold text-blue-600">space mysteries</span>,
        <span class="font-semibold text-indigo-600">ancient secrets</span>, and
        <span class="font-semibold text-green-600">scientific breakthroughs</span> that will change how you see the world.
      </p>

      <!-- Stats Row -->
      <div class="flex justify-center space-x-8 mb-8 text-center">
        <div class="bg-white/50 backdrop-blur-sm rounded-lg px-4 py-2">
          <div class="text-2xl font-bold text-purple-600">1000+</div>
          <div class="text-sm text-gray-600">Mind-Blown Readers</div>
        </div>
        <div class="bg-white/50 backdrop-blur-sm rounded-lg px-4 py-2">
          <div class="text-2xl font-bold text-blue-600">Daily</div>
          <div class="text-sm text-gray-600">New Discoveries</div>
        </div>
        <div class="bg-white/50 backdrop-blur-sm rounded-lg px-4 py-2">
          <div class="text-2xl font-bold text-green-600">100%</div>
          <div class="text-sm text-gray-600">Free Knowledge</div>
        </div>
      </div>
    </div>

    <!-- Language Toggle -->
    <div class="flex justify-center mb-8">
      <div class="bg-gray-100 rounded-lg p-1 flex">
        <a href="/" class="px-4 py-2 bg-white rounded-md shadow-sm text-gray-900 font-medium">English</a>
        <a href="/tr" class="px-4 py-2 text-gray-600 hover:text-gray-900">TÃ¼rkÃ§e</a>
      </div>
    </div>    <!-- Latest Posts -->
    <div class="space-y-8">
      <!-- Featured Article -->
      {englishPosts[0] && (
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-2xl overflow-hidden shadow-2xl">
          <div class="p-8 text-white">
            <div class="flex items-center mb-4">
              <span class="bg-white/20 px-3 py-1 rounded-full text-sm font-medium">ðŸ”¥ Trending</span>
              {englishPosts[0].data.category && (
                <span class="ml-3 bg-white/10 px-3 py-1 rounded-full text-sm">{englishPosts[0].data.category}</span>
              )}
            </div>
            <h2 class="text-3xl font-bold mb-4 leading-tight">
              <a href={`/posts/${englishPosts[0].slug.replace('en/', '')}/`} class="hover:text-purple-200 transition-colors">
                {englishPosts[0].data.title}
              </a>
            </h2>
            <p class="text-purple-100 text-lg mb-6 leading-relaxed">{englishPosts[0].data.description}</p>
            <div class="flex items-center justify-between">
              <span class="text-purple-200 text-sm">{englishPosts[0].data.date}</span>
              <a href={`/posts/${englishPosts[0].slug.replace('en/', '')}/`}
                 class="bg-white text-purple-600 px-6 py-3 rounded-lg font-semibold hover:bg-purple-50 transition-colors flex items-center">
                Discover the Truth â†’
              </a>
            </div>
          </div>
        </div>
      )}

      <!-- Article Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {englishPosts.slice(1).map(post => (
          <article class="group bg-white rounded-xl shadow-md hover:shadow-2xl transition-all duration-300 border border-gray-100 overflow-hidden">
            {post.data.category && (
              <div class="h-2 bg-gradient-to-r from-purple-500 to-blue-500"></div>
            )}
            <div class="p-6">
              <div class="flex items-center mb-3">
                {post.data.category && (
                  <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-xs font-medium uppercase tracking-wide">
                    {post.data.category}
                  </span>
                )}
                <span class="ml-auto text-xs text-gray-500">{post.data.date}</span>
              </div>
              <h2 class="text-xl font-bold text-gray-900 mb-3 leading-tight group-hover:text-purple-600 transition-colors">
                <a href={`/posts/${post.slug.replace('en/', '')}/`} class="block">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-gray-600 mb-4 leading-relaxed">{post.data.description}</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-500">ðŸ§  Mind-expanding</span>
                </div>
                <a href={`/posts/${post.slug.replace('en/', '')}/`}
                   class="text-purple-600 font-medium hover:text-purple-700 transition-colors flex items-center">
                  Read More â†’
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>    <!-- Enhanced Call to Action -->
    <div class="relative mt-16 overflow-hidden">
      <div class="bg-gradient-to-br from-purple-600 via-blue-600 to-indigo-700 rounded-2xl p-12 text-center text-white relative">
        <div class="absolute inset-0 bg-black/10 rounded-2xl"></div>
        <div class="relative z-10">
          <h3 class="text-4xl font-bold mb-4">ðŸš€ Ready to Blow Your Mind?</h3>
          <p class="text-xl text-purple-100 mb-8 max-w-2xl mx-auto">
            Join thousands of curious minds getting daily doses of shocking discoveries,
            hidden truths, and mind-expanding insights.
          </p>

          <!-- Email Signup -->
          <div class="max-w-md mx-auto mb-6">
            <div class="flex rounded-lg overflow-hidden shadow-lg">
              <input type="email" placeholder="Enter your email for mind-blowing content..."
                     class="flex-1 px-6 py-4 text-gray-900 text-lg focus:outline-none">
              <button class="bg-yellow-400 hover:bg-yellow-300 text-gray-900 px-8 py-4 font-bold text-lg transition-colors">
                Get Shocked! ðŸ§ 
              </button>
            </div>
          </div>

          <!-- Social Proof -->
          <div class="flex justify-center items-center space-x-6 text-purple-200">
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              No spam, pure mind-blowing content
            </span>
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
              </svg>
              Unsubscribe anytime
            </span>
          </div>
        </div>

        <!-- Decorative elements -->
        <div class="absolute top-4 right-4 w-16 h-16 bg-yellow-400/20 rounded-full animate-pulse"></div>
        <div class="absolute bottom-4 left-4 w-12 h-12 bg-purple-400/20 rounded-full animate-bounce"></div>
      </div>
    </div>
  </main>
</Layout>
