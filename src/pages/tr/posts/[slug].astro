---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const turkishPosts = posts.filter(p => p.data.language === 'tr');

  return turkishPosts.map(post => {
    // Extract slug from post.id and remove .md extension if present
    let slug = post.id.startsWith('tr/') ? post.id.slice(3) : post.id;
    slug = slug.replace(/\.md$/, ''); // Remove .md extension
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Back Navigation -->
    <nav class="mb-8">
      <a href="/tr" class="text-purple-600 hover:text-purple-700 transition-colors">
        ← Ana Sayfaya Dön
      </a>
    </nav>

    <!-- Article Header -->
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{post.data.title}</h1>
      <p class="text-xl text-gray-600 mb-4">{post.data.description}</p>
      <div class="text-gray-500">
        <time datetime={post.data.date}>{post.data.date}</time>
      </div>
    </header>

    <!-- Article Content -->
    <article class="prose prose-lg mx-auto">
      <Content />
    </article>

    <!-- Article Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
      <div class="text-center">
        <p class="text-gray-600 mb-4">Bu bilgi damlasını beğendiniz mi?</p>
        <div class="flex justify-center space-x-4">
          <button class="bg-purple-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-purple-700 transition-colors">
            Paylaş
          </button>
          <a href="/tr" class="bg-gray-100 text-gray-900 px-4 py-2 rounded-lg font-medium hover:bg-gray-200 transition-colors">
            Daha Fazla Makale Oku
          </a>
        </div>
      </div>
    </footer>
  </main>
</Layout>
